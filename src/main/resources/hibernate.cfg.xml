<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- hibernate connection details -->

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--<property name="hibernate.connection.url"><![CDATA[jdbc:mysql://localhost:3306/uniprot?characterEncoding=utf-8&amp;useUnicode=true&amp;autoReconnect=true&amp;max_allowed_packet=900000000]]></property>-->
        <property name="hibernate.connection.url"><![CDATA[jdbc:mysql://db-developer1.rcsb.org:8888/uniprot?characterEncoding=utf-8&amp;useUnicode=true&amp;autoReconnect=true&amp;max_allowed_packet=900000000]]></property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.connection.username">developer</property>
        <property name="hibernate.connection.password">SuperSecure!</property>

        <!-- DDL Mode -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <!-- General Hibernate settings. -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <!--<property name="hibernate.temp.use_jdbx_metadata_defaults">false</property>-->
        <!--<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>-->

        <!-- configuration pool via c3p0-->
        <property name="c3p0.min_size">5</property>
        <property name="c3p0.max_size">25</property>
        <property name="c3p0.timeout">10000</property>


    </session-factory>
</hibernate-configuration>